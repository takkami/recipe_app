<div class="auth-container">
  <div class="auth-card">
    <div class="auth-card__header">
      <h2 class="auth-card__title">ログイン</h2>
      <p class="auth-card__subtitle">アカウントにログインしてレシピを管理しましょう</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="auth-form__group">
        <%= f.label :email, "メールアドレス", class: "auth-form__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-form__input", placeholder: "example@email.com" %>
      </div>

      <div class="auth-form__group">
        <%= f.label :password, "パスワード", class: "auth-form__label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "auth-form__input", placeholder: "6文字以上" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-form__checkbox">
          <%= f.check_box :remember_me, class: "auth-form__checkbox-input" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "auth-form__checkbox-label" %>
        </div>
      <% end %>

      <div class="auth-form__actions">
        <%= f.submit "ログイン", class: "auth-btn auth-btn--primary" %>
      </div>
    <% end %>

    <div class="auth-divider">
      <span class="auth-divider__text">または</span>
    </div>

    <div class="auth-form__actions">
      <%= button_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "auth-btn auth-btn--secondary" %>
    </div>

    <div class="auth-links">
      <% if devise_mapping.registerable? %>
        <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "auth-link" %>
      <% end %>
    </div>
  </div>
</div>
